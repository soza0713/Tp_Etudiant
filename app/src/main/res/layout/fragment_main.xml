        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/rvEtudiants"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>